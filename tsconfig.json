{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@crhio/normie": ["./node_modules/@crhio/normie/dist"],
      "@crhio/leviate": ["./node_modules/@crhio/leviate/core"],
      "@crhio/leviate/drawing": ["./node_modules/@crhio/leviate/core/drawing"],
    },
    "allowJs": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules/"]
}
